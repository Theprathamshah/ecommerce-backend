generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int       @id @default(autoincrement())
  firstName String
  lastName  String
  email     String    @unique
  phone     String    @unique
  address   String
  password  String
  roleId    Int
  role      Role      @relation(fields: [roleId], references: [id])
  products  Product[]
  tokens    Token[]
  orders    Order[]
  cart      Cart?

  @@map("users")
}

model Role {
  id     Int    @id @default(autoincrement())
  name   String
  users  User[]
}

model Product {
  id       Int    @id @default(autoincrement())
  name     String
  price    Float
  sellerId Int
  seller   User   @relation(fields: [sellerId], references: [id])
}

model Order {
  id          Int    @id @default(autoincrement())
  customerId  Int
  customer    User   @relation(fields: [customerId], references: [id])
}

model Token {
  id      Int    @id @default(autoincrement())
  userId  Int
  user    User   @relation(fields: [userId], references: [id])
  token   String
}

model Cart {
  id         Int    @id @default(autoincrement())
  customerId Int @unique
  customer   User   @relation(fields: [customerId], references: [id])
}
